@model ScoreboardModel
@{
    ViewData["Title"] = "Scoreboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table>
        <style>
            
        table {
          border-collapse: collapse;
          width: 100%;
        }
        
        th, td {
          padding: 8px;
          text-align: left;
          border-bottom: 1px solid #ddd;
        }
        
        th {
          background-color: #f2f2f2;
        }
        
        tr:hover {
          background-color: #f5f5f5;
        }
        
        .user {
          font-weight: bold;
        }
        
        .score {
          font-weight: bold;
        }
        h2 
        {font-size: 20px ;}
        </style>
        <h1> Scoreboard</h1>
        <form action="/Create/Input" method="post"></form>
        <h2> 
        Top Scoring Users<br>          
          </h2>
          <thead>
            <tr>
              <th>User</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
                @foreach (Scoreboard s in @Model.Scoreboard)
            {
                <tr>
                    <td>@s.User</td>
                    <td>@s.Score</td>
                </tr>
            }
        </tbody>
        </table>